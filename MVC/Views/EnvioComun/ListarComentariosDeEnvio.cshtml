@model IEnumerable<MVC.Models.Envios.ComentarioCompletoViewModel>

@ViewBag.Mensaje

@{
    ViewData["Title"] = "ListarComentariosDeEnvio";
}

<h1>ListarComentariosDeEnvio</h1>
@if (Model.Count() > 0)
{
    <p>
        <a asp-action="ListarEnviosDeCliente">Volver al listado</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Texto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Texto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <p>No hay comentarios asociados a este envio.</p>
}

